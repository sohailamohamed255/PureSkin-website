<!-- Glycolic acid exfoliant bottle -->
<svg width="400" height="400" viewBox="0 0 400 400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bgGlyc" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#fef7ed;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#fed7aa;stop-opacity:1" />
    </linearGradient>
  </defs>
  <rect width="400" height="400" fill="url(#bgGlyc)"/>
  
  <!-- Exfoliant bottle -->
  <rect x="150" y="80" width="100" height="240" rx="15" fill="#f97316" opacity="0.8"/>
  
  <!-- Pump cap -->
  <rect x="175" y="50" width="50" height="40" rx="25" fill="#ea580c" opacity="0.9"/>
  
  <!-- Label -->
  <rect x="160" y="180" width="80" height="80" rx="5" fill="#fef7ed" opacity="0.9"/>
  <text x="200" y="200" text-anchor="middle" font-family="Arial, sans-serif" font-size="11" fill="#ea580c">Glycolic Acid</text>
  <text x="200" y="215" text-anchor="middle" font-family="Arial, sans-serif" font-size="10" fill="#ea580c">Exfoliant</text>
  <text x="200" y="230" text-anchor="middle" font-family="Arial, sans-serif" font-size="9" fill="#ea580c">10% AHA</text>
  <text x="200" y="245" text-anchor="middle" font-family="Arial, sans-serif" font-size="8" fill="#ea580c">Professional</text>
  
  <!-- Exfoliation particles -->
  <circle cx="170" cy="130" r="2" fill="#fb923c" opacity="0.8"/>
  <circle cx="230" cy="140" r="1.5" fill="#fb923c" opacity="0.7"/>
  <circle cx="190" cy="120" r="1" fill="#fb923c" opacity="0.9"/>
  <circle cx="210" cy="110" r="2" fill="#fb923c" opacity="0.6"/>
</svg>