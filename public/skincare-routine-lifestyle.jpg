<!-- Skincare routine lifestyle photo -->
<svg width="600" height="400" viewBox="0 0 600 400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bgLifestyle" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#fdf2f8;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#fce7f3;stop-opacity:1" />
    </linearGradient>
  </defs>
  <rect width="600" height="400" fill="url(#bgLifestyle)"/>
  
  <!-- Bathroom counter -->
  <rect x="50" y="280" width="500" height="80" rx="10" fill="#f1f5f9" opacity="0.8"/>
  
  <!-- Mirror -->
  <rect x="200" y="50" width="200" height="150" rx="100" fill="#e2e8f0" opacity="0.6"/>
  
  <!-- Skincare products on counter -->
  <rect x="150" y="250" width="30" height="50" rx="5" fill="#ec4899" opacity="0.8"/>
  <rect x="200" y="240" width="25" height="60" rx="5" fill="#8b5cf6" opacity="0.8"/>
  <circle cx="270" cy="270" r="20" fill="#f59e0b" opacity="0.8"/>
  <rect x="320" y="245" width="35" height="55" rx="5" fill="#14b8a6" opacity="0.8"/>
  <rect x="380" y="250" width="28" height="50" rx="5" fill="#3b82f6" opacity="0.8"/>
  
  <!-- Towels -->
  <rect x="450" y="260" width="80" height="20" rx="10" fill="#fbbf24" opacity="0.6"/>
  <rect x="460" y="240" width="80" height="20" rx="10" fill="#fb923c" opacity="0.6"/>
  
  <!-- Plants -->
  <ellipse cx="100" cy="200" rx="15" ry="30" fill="#22c55e" opacity="0.7"/>
  <ellipse cx="520" cy="180" rx="20" ry="40" fill="#16a34a" opacity="0.6"/>
  
  <text x="300" y="380" text-anchor="middle" font-family="Arial, sans-serif" font-size="16" fill="#be185d" font-weight="bold">Daily Skincare Routine</text>
</svg>