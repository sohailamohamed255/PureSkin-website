<!-- Showcase of natural ingredients -->
<svg width="600" height="400" viewBox="0 0 600 400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bgIngred" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f7fee7;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#ecfccb;stop-opacity:1" />
    </linearGradient>
  </defs>
  <rect width="600" height="400" fill="url(#bgIngred)"/>
  
  <!-- Aloe vera -->
  <ellipse cx="150" cy="150" rx="30" ry="60" fill="#22c55e" opacity="0.8"/>
  <text x="150" y="230" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#15803d">Aloe Vera</text>
  
  <!-- Vitamin C (orange) -->
  <circle cx="300" cy="120" r="35" fill="#f97316" opacity="0.8"/>
  <text x="300" y="180" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#ea580c">Vitamin C</text>
  
  <!-- Hyaluronic Acid (blue drops) -->
  <circle cx="450" cy="140" r="25" fill="#3b82f6" opacity="0.8"/>
  <circle cx="470" cy="160" r="15" fill="#3b82f6" opacity="0.6"/>
  <circle cx="430" cy="165" r="18" fill="#3b82f6" opacity="0.7"/>
  <text x="450" y="210" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#1d4ed8">Hyaluronic Acid</text>
  
  <!-- Niacinamide -->
  <rect x="120" y="280" width="60" height="40" rx="20" fill="#8b5cf6" opacity="0.8"/>
  <text x="150" y="350" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#7c3aed">Niacinamide</text>
  
  <!-- Retinol -->
  <ellipse cx="350" cy="300" rx="40" ry="25" fill="#ec4899" opacity="0.8"/>
  <text x="350" y="350" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#be185d">Retinol</text>
  
  <!-- Peptides -->
  <path d="M450 280 L480 300 L450 320 L420 300 Z" fill="#14b8a6" opacity="0.8"/>
  <text x="450" y="350" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#0f766e">Peptides</text>
  
  <text x="300" y="50" text-anchor="middle" font-family="Arial, sans-serif" font-size="20" fill="#365314" font-weight="bold">Premium Natural Ingredients</text>
</svg>