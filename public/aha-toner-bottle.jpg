<!-- AHA toner bottle -->
<svg width="400" height="400" viewBox="0 0 400 400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bgAha" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#fdf4ff;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#fae8ff;stop-opacity:1" />
    </linearGradient>
  </defs>
  <rect width="400" height="400" fill="url(#bgAha)"/>
  
  <!-- Toner bottle -->
  <rect x="150" y="80" width="100" height="240" rx="15" fill="#a855f7" opacity="0.8"/>
  
  <!-- Spray cap -->
  <rect x="175" y="50" width="50" height="40" rx="25" fill="#7c3aed" opacity="0.9"/>
  
  <!-- Label -->
  <rect x="160" y="180" width="80" height="80" rx="5" fill="#fdf4ff" opacity="0.9"/>
  <text x="200" y="200" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#7c3aed">AHA</text>
  <text x="200" y="215" text-anchor="middle" font-family="Arial, sans-serif" font-size="10" fill="#7c3aed">Exfoliating</text>
  <text x="200" y="230" text-anchor="middle" font-family="Arial, sans-serif" font-size="10" fill="#7c3aed">Toner</text>
  <text x="200" y="250" text-anchor="middle" font-family="Arial, sans-serif" font-size="8" fill="#7c3aed">Gentle Formula</text>
  
  <!-- Mist effect -->
  <circle cx="200" cy="30" r="2" fill="#c084fc" opacity="0.7"/>
  <circle cx="190" cy="25" r="1" fill="#c084fc" opacity="0.8"/>
  <circle cx="210" cy="28" r="1.5" fill="#c084fc" opacity="0.6"/>
</svg>