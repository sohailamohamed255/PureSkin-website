<!-- Sunscreen SPF 50 tube -->
<svg width="400" height="400" viewBox="0 0 400 400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bgSun" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#fffbeb;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#fef3c7;stop-opacity:1" />
    </linearGradient>
  </defs>
  <rect width="400" height="400" fill="url(#bgSun)"/>
  
  <!-- Sunscreen tube -->
  <ellipse cx="200" cy="200" rx="60" ry="120" fill="#f59e0b" opacity="0.8"/>
  
  <!-- Tube cap -->
  <ellipse cx="200" cy="80" rx="30" ry="20" fill="#d97706" opacity="0.9"/>
  
  <!-- Label -->
  <rect x="160" y="170" width="80" height="60" rx="5" fill="#fffbeb" opacity="0.9"/>
  <text x="200" y="190" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#d97706">Sunscreen</text>
  <text x="200" y="205" text-anchor="middle" font-family="Arial, sans-serif" font-size="14" fill="#d97706" font-weight="bold">SPF 50</text>
  <text x="200" y="220" text-anchor="middle" font-family="Arial, sans-serif" font-size="9" fill="#d97706">Broad Spectrum</text>
  
  <!-- Sun rays -->
  <path d="M200 30 L205 50 L195 50 Z" fill="#fbbf24" opacity="0.8"/>
  <path d="M250 60 L260 75 L245 80 Z" fill="#fbbf24" opacity="0.7"/>
  <path d="M150 60 L140 75 L155 80 Z" fill="#fbbf24" opacity="0.7"/>
  <path d="M270 100 L280 110 L270 120 Z" fill="#fbbf24" opacity="0.6"/>
  <path d="M130 100 L120 110 L130 120 Z" fill="#fbbf24" opacity="0.6"/>
</svg>