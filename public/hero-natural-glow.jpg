<!-- Hero image focusing on natural glow -->
<svg width="1200" height="600" viewBox="0 0 1200 600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bgGlow" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#fef7ed;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#fed7aa;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#fb923c;stop-opacity:0.6" />
    </linearGradient>
    <radialGradient id="glow" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#fbbf24;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#f59e0b;stop-opacity:0.3" />
    </radialGradient>
  </defs>
  <rect width="1200" height="600" fill="url(#bgGlow)"/>
  
  <!-- Central glow effect -->
  <circle cx="600" cy="300" r="200" fill="url(#glow)"/>
  
  <!-- Floating skincare elements -->
  <ellipse cx="300" cy="200" rx="40" ry="20" fill="#22c55e" opacity="0.7" transform="rotate(15 300 200)"/>
  <ellipse cx="900" cy="180" rx="35" ry="18" fill="#16a34a" opacity="0.8" transform="rotate(-20 900 180)"/>
  <ellipse cx="200" cy="400" rx="30" ry="15" fill="#84cc16" opacity="0.6" transform="rotate(25 200 400)"/>
  <ellipse cx="1000" cy="420" rx="38" ry="19" fill="#65a30d" opacity="0.7" transform="rotate(-15 1000 420)"/>
  
  <!-- Product silhouettes -->
  <rect x="500" y="250" width="40" height="80" rx="20" fill="#ea580c" opacity="0.6"/>
  <rect x="660" y="240" width="35" height="90" rx="17" fill="#dc2626" opacity="0.7"/>
  <circle cx="580" cy="350" r="25" fill="#f59e0b" opacity="0.8"/>
  
  <!-- Light rays -->
  <path d="M600 100 L610 200 L590 200 Z" fill="#fbbf24" opacity="0.4"/>
  <path d="M700 150 L750 250 L650 250 Z" fill="#fbbf24" opacity="0.3"/>
  <path d="M500 150 L450 250 L550 250 Z" fill="#fbbf24" opacity="0.3"/>
</svg>