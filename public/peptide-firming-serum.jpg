<!-- Peptide firming serum bottle -->
<svg width="400" height="400" viewBox="0 0 400 400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bgPeptide" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f0fdfa;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#ccfbf1;stop-opacity:1" />
    </linearGradient>
  </defs>
  <rect width="400" height="400" fill="url(#bgPeptide)"/>
  
  <!-- Serum bottle -->
  <rect x="150" y="100" width="100" height="200" rx="10" fill="#14b8a6" opacity="0.8"/>
  
  <!-- Dropper cap -->
  <rect x="175" y="70" width="50" height="40" rx="25" fill="#0f766e" opacity="0.9"/>
  
  <!-- Label -->
  <rect x="160" y="180" width="80" height="60" rx="5" fill="#f0fdfa" opacity="0.9"/>
  <text x="200" y="200" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#0f766e">Peptide</text>
  <text x="200" y="215" text-anchor="middle" font-family="Arial, sans-serif" font-size="10" fill="#0f766e">Firming</text>
  <text x="200" y="230" text-anchor="middle" font-family="Arial, sans-serif" font-size="10" fill="#0f766e">Serum</text>
  
  <!-- Molecular structure -->
  <circle cx="170" cy="130" r="3" fill="#5eead4" opacity="0.8"/>
  <circle cx="180" cy="140" r="2" fill="#5eead4" opacity="0.7"/>
  <circle cx="190" cy="135" r="3" fill="#5eead4" opacity="0.9"/>
  <line x1="170" y1="130" x2="180" y2="140" stroke="#5eead4" stroke-width="1" opacity="0.6"/>
  <line x1="180" y1="140" x2="190" y2="135" stroke="#5eead4" stroke-width="1" opacity="0.6"/>
  
  <!-- Droplets -->
  <circle cx="200" cy="50" r="4" fill="#14b8a6" opacity="0.7"/>
  <circle cx="185" cy="40" r="2" fill="#14b8a6" opacity="0.8"/>
  <circle cx="215" cy="45" r="3" fill="#14b8a6" opacity="0.6"/>
</svg>