<!-- Aloe vera gel tube -->
<svg width="400" height="400" viewBox="0 0 400 400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bgAloe" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f0fdf4;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#dcfce7;stop-opacity:1" />
    </linearGradient>
  </defs>
  <rect width="400" height="400" fill="url(#bgAloe)"/>
  
  <!-- Aloe gel tube -->
  <ellipse cx="200" cy="200" rx="60" ry="120" fill="#22c55e" opacity="0.8"/>
  
  <!-- Tube cap -->
  <ellipse cx="200" cy="80" rx="30" ry="20" fill="#15803d" opacity="0.9"/>
  
  <!-- Label -->
  <rect x="160" y="170" width="80" height="60" rx="5" fill="#f0fdf4" opacity="0.9"/>
  <text x="200" y="190" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#15803d">Aloe Vera</text>
  <text x="200" y="205" text-anchor="middle" font-family="Arial, sans-serif" font-size="10" fill="#15803d">Soothing</text>
  <text x="200" y="220" text-anchor="middle" font-family="Arial, sans-serif" font-size="10" fill="#15803d">Gel</text>
  
  <!-- Aloe leaves -->
  <ellipse cx="150" cy="120" rx="15" ry="30" fill="#16a34a" opacity="0.6"/>
  <ellipse cx="250" cy="130" rx="12" ry="25" fill="#16a34a" opacity="0.7"/>
  <ellipse cx="170" cy="100" rx="10" ry="20" fill="#16a34a" opacity="0.8"/>
</svg>